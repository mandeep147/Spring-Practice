<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">

   <context:annotation-config/>
	<bean id = "pointA" class = "spring.Point">
		<qualifier value = "circle" />
		<property name = "x" value = "-20"></property>
		<property name = "y" value = "0"></property>
	</bean>
	<!-- bean id = "center" class = "spring.Point">
		<property name = "x" value = "0"></property>
		<property name = "y" value = "0"></property>
	</bean-->
	<bean id = "pointB" class = "spring.Point">
		<property name = "x" value = "0"></property>
		<property name = "y" value = "0"></property>
	</bean>
	<bean id = "pointC" class = "spring.Point">
		<property name = "x" value = "20"></property>
		<property name = "y" value = "0"></property>
	</bean>
	<bean id = "circle" class = "spring.Circle">
		
	</bean>
	<!-- beanpostprocessor are not required as    <context:annotation-config/> will automatically configure the bean type -->
		<!-- bean class = "org.springframework.beans.factory.annotation.AutowiredAnnotationBeanPostProcessor" /-->
	
</beans>
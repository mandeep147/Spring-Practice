<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:aop="http://www.springframework.org/schema/aop"
		xmlns:context="http://www.springframework.org/schema/context"
		xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
				http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-2.0.xsd
				http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd">

	<aop:aspectj-autoproxy />
	
	<bean name = "circle" class = "spring.model.Circle">
		<property name = "name" value = "Circle name"></property>
	</bean>

	<bean name = "triangle" class = "spring.model.Triangle" >
		<property name = "name" value = "Triangle name"></property>
	</bean>

	<bean name = "shapeService" class = "spring.service.ShapeService" autowire="byName" />		

	<bean name = "loggingAspect" class = "spring.aspect.LoggingAspect" />
	
	<aop:config>
		<aop:aspect id = "loggingAspect" ref = "loggingAspect">
			<aop:pointcut id = "pointcutAspect" expression = "execution(* get*())"/>
			<aop:before pointcut-ref = "pointcutAspect" method = "logAspect"/>
			<aop:around method = "aroundAdvice" pointcut-ref = "pointcutAspect"/>
		</aop:aspect>
	</aop:config>
</beans>